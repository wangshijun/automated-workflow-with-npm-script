{
  "name": "hello-npm-script",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "config": {
    "port": 3000
  },
  "scripts": {
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint *.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint *.less",
    "lint:json": "jsonlint --quiet *.json",
    "lint:markdown": "markdownlint --config .markdownlint.json *.md",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test mocha tests/",
    "cover": "nyc --reporter=html npm test",
    "cover:cleanup": "rm -rf coverage && rm -rf .nyc_output",
    "cover:archive": "cross-var \"mkdir -p coverage_archive/$npm_package_version && cp -r coverage/* coverage_archive/$npm_package_version\"",
    "cover:serve": "cross-var http-server coverage_archive/$npm_package_version -p $npm_package_config_port",
    "cover:open": "cross-var opn http://localhost:$npm_package_config_port",
    "postcover": "npm-run-all cover:archive cover:cleanup --parallel cover:serve cover:open"
  },
  "keywords": [],
  "author": "wangshijun <wangshijun2010@gmail.com> (http://github.com/wangshijun)",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.2",
    "cross-env": "^5.1.1",
    "cross-var": "^1.1.0",
    "eslint": "^4.11.0",
    "http-server": "^0.10.0",
    "jsonlint": "^1.6.2",
    "markdownlint-cli": "^0.5.0",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.3.0",
    "opn-cli": "^3.1.0",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      ".*.js"
    ]
  }
}
